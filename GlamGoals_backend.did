type Goal = record {
  goal: text;
  description: text;
  day: text;
  location: text;
  completed: bool;
};

type UserGoal = record {
  id: text;
  userGoal: vec Goal;
};

service : {
  "createUserGoal": () -> (UserGoal);
  "addGoal": (text, Goal) -> (opt UserGoal) query;
  "getUserGoals": (text) -> (opt UserGoal) query;
  "updateGoal": (text, nat, Goal) -> (opt UserGoal);
  "deleteGoal": (text, nat) -> (opt UserGoal);
  "getSortedGoals": (text) -> (opt UserGoal) query;
}